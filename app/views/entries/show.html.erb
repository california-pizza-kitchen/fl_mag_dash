<script type="text/javascript">
  $(function () {
    entriesController.disableScroll();
    entriesController.resetEntries();
    entriesController.fetchEntry("<%= @slug %>");
    if (semestersShowSidebarController.arrayOfSlugs.length < 1 && sidebarController.arrayOfSlugs.length === 0) {
      console.log('resetting sem show sidebar');
      semestersShowSidebarController.resetEntries();
      semestersShowSidebarController.initialize();
    } else if (semestersShowSidebarController.arrayOfSlugs.length < 1 && sidebarController.arrayOfSlugs.length === 0) {
      console.log('resetting sidebar');
      sidebarController.resetEntries();
      sidebarController.initialize();
    }
  });
</script>